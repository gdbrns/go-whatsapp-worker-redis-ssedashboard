# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Direct Database Configuration (PostgreSQL)
DATABASE_HOST=db.your-project.supabase.co
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password_here
DATABASE_SSL_MODE=require

# Redis Configuration (Local Message Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DATABASE=0
REDIS_POOL_SIZE=20
REDIS_MIN_IDLE_CONNS=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_IDLE_TIMEOUT=5m
REDIS_MAX_CONN_AGE=30m

# Redis Queue Configuration
REDIS_QUEUE_NAME=pending_messages
REDIS_QUEUE_PROCESSING_TIMEOUT=30s
REDIS_QUEUE_RETRY_DELAY=5s
REDIS_QUEUE_MAX_RETRIES=3
REDIS_QUEUE_BLOCKING_POP_TIMEOUT=0s
REDIS_QUEUE_BATCH_SIZE=10

# Redis Streams Configuration
REDIS_CONSUMER_GROUP=workers
REDIS_CONSUMER_NAME=worker-1
REDIS_STREAM_MAX_LEN=100000

# WhatsApp API Configuration
WHATSAPP_BASE_URL=your_whatsapp_api_base_url_here
WHATSAPP_AUTH=your_whatsapp_auth_token_here

# Worker Configuration
WORKER_CONCURRENCY=10
WORKER_BATCH_SIZE=50
WORKER_POLL_INTERVAL=5s
WORKER_MAX_RETRIES=3

# Rate Limiting Configuration
RATE_LIMIT_MIN_MESSAGES=6
RATE_LIMIT_MAX_MESSAGES=14
RATE_LIMIT_DELAY_MIN=2s
RATE_LIMIT_DELAY_MAX=5s

# Rate Profile Configuration (Phase 1)
# Set to 'manual' for fast operator responses, 'bulk' for slow human-like campaigns
RATE_PROFILE=manual
RATE_DELAY_MEAN_MS=10000
RATE_DELAY_JITTER_MS=5000
RATE_BURST_LIMIT=20
RATE_COOLDOWN_SECONDS=210

# Natural Behavior Configuration
TYPING_DELAY_MIN=1s
TYPING_DELAY_MAX=3s
NATURAL_BREAK_INTERVAL=50
NATURAL_BREAK_DURATION_MIN=30s
NATURAL_BREAK_DURATION_MAX=1m

# Health Check Configuration
HEALTH_CHECK_INTERVAL=24h
STUCK_MESSAGE_TIMEOUT=5m

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8081

# Logging Configuration
# Set to 'info' for production (minimal logs, API responses visible)
# Set to 'debug' for development (detailed processing logs)
LOG_LEVEL=info

# API Server Configuration
API_PORT=8081
API_HOST=0.0.0.0
ENABLE_CORS=true

# Web Dashboard Configuration
WEB_PORT=3000
WEB_HOST=0.0.0.0
ENABLE_WEBSOCKET=true

# Authentication Configuration
ENABLE_AUTH=true
AUTH_TYPE=basic
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_password_here
DASHBOARD_REALM=Go-WhatsApp Worker Dashboard

# API Authentication (Optional - for API endpoints)
API_KEY=your_api_key_here
API_KEY_HEADER=X-API-Key
